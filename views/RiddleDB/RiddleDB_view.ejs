<form action= "/RiddleDB/create" method= "POST" class= "form-signin">
 <h2 class= "form-signin-heading">Riddle Database</h2>

<% if(flash && flash.err) {%>
  <ul class="alert alert-success">
  <% Object.keys(flash.err).forEach(function(error){ %>
    <li><%- flash.err[error].message %></li>
  <% }) %>
  </ul>
<% } %>

 <div class= "control-group">
 <input type= "text" class= "form-control" placeholder= "Riddle Question" name= "RiddleQ">
 </div>

 <div class= "control-group">
 <input type= "text" class= "form-control" placeholder= "Riddle Answers" name= "RiddleA">
 </div>


 <input type= "submit" class= "btn btn-lg btn-primary btn-block" value= "Submit"/>
 <input type="hidden" name="_csrf" value="<%= _csrf %>"/>

</form>
