<div class="container">
<div class="center-block col-md-6 col-md-offset-3">
<form role="form" action="/user/createAdmin" method="POST" class="form-horizontal">
	<h2>Create Admin Account</h2>

	<% if(flash && flash.err) {%>
		<ul class="alert alert-success">
		<% Object.keys(flash.err).forEach(function(error){ %>
			<li><%- flash.err[error].message %></li>
		<% }) %>
		</ul>
	<% } %>
	<input type="password" class="form-control" placeholder="password" name="password">
	<input type="password" class="form-control" placeholder="password confirmation" name="confirmation">
	<input type="text" class="form-control" placeholder="Email address" name="email">
	<input type="text" class="form-control" placeholder="Email address confirmation" name="emailConfirm">

	<input type="submit" class="btn btn-lg btn-primary" value="Create Account"/>
	<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
</form>
</div>
</div>
