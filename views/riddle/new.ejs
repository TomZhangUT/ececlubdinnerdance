	<link rel="stylesheet" href="/styles/menu.css">
	<link rel="stylesheet" href="/styles/registration.css">
	<link rel="stylesheet" href="/styles/register-account.css">
	<link rel="stylesheet" href="/styles/manage.css">

<div class="horizontalcenter">

	<center> <div class = "top-bar"> </div> </center>
    <div id = "title">
      <h1 class = "pos">
        <center> Upload a Riddle </center>
      </h1>
    </div>
    <center> <div class = "middle-bar"> </div> </center>
    <br>

	<div class="container">
		<div class="center-block col-md-6 col-md-offset-3">
			<form role="form" action="/riddle/create" method="POST" class="form-horizontal" id="riddleForm">
				<% if(flash && flash.err) {%>
					<ul class="alert alert-success">
						<% Object.keys(flash.err).forEach(function(error){ %>
							<% if (flash.err[error].constructor === Array){
								flash.err[error].forEach(function(obj){ %>
									<li><%- obj.message %></li>
								<% }) 
							} else { %>
								<li><%- flash.err[error].message %></li>
							<% } %>
						<% }) %>
					</ul>
				<% } %>
				You may enter HTML in the riddle to style it better<br>
				<textarea name="riddle" form="riddleForm">Enter Riddle Here</textarea><br>
				Possible Answers: <input type="text" class="form-control" placeholder="answer" name="answer"><br>
				*enter as comma separated list*<br>
				Publish Date: <input type="date" name="publishDate"><br>
				Expiry Date: <input type="date" name="expiryDate"><br>
				<input type="submit" class="btn btn-lg btn-primary" value="Create Riddle"/><br>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			<table class='ticket-type-container'>
			</form>
		</div>
	</div>

</div>