<% block('localScripts', '<script src="/js/email.js"></script>') %>

<div class="container" style="color:#FFF; padding-top:50px">
	<div class="row-fluid">
		<div class="col-md-8 col-md-offset-2">
			<div class="row-fluid">
				<h2>Query</h2>
				<textarea id="queryJSON" class="form-control" name="query" rows="3"></textarea>
				<button id="queryBtn" class="btn btn-lg btn-primary btn-block">submit</button>
				<input type="hidden" id="csrf" value="<%= _csrf %>" />
			</div>
			<div class="row-fluid">
				<div class="col-md-6">
					<h3>Query Results</h3>
					<ul id="queryResults"></ul>
				</div>
				<div class="col-md-6">
					<h3>Email Recipients</h3>
					<ul id="emailRecipients"></ul>
				</div>
			</div>
		</div>
	</div>
</div>