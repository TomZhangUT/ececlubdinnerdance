<div class="container" style="color:#FFF; padding-top:50px">
	<div class="row-fluid">
		<div class="col-md-8 col-md-offset-2">
			<form action="/email/update/<%= email.id %>" method="POST" class="form-signin">
				<h2>Editing Email</h2>

				<input value="<%= email.title %>" name="title" type="text" class="form-control" />		
				
				<textarea class="form-control" name="html" rows="3"><%= email.html %></textarea>
				<input type="submit" value="submit" class="btn btn-lg btn-primary btn-block"/>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
		</div>
	</div>
</div>